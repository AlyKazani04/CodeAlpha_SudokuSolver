{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-static",
                "-static-libgcc",
                "-static-libstdc++",
                "main.cpp",
                "grid.cpp",
                "interface.cpp",
                "logic.cpp",
                "-I",
                "/path/to/SFML-3.0.0/include",
                "-DSFML_STATIC",
                "-o",
                "SudokuSolver.exe",
                "-L",
                "/path/to/SFML-3.0.0/lib",
                "-lsfml-graphics-s",
                "-lsfml-window-s",
                "-lsfml-audio-s",
                "-lsfml-system-s",
                "-lopengl32",
                "-lfreetype",
                "-lwinmm",
                "-lgdi32",
                "-lflac",
                "-lvorbisenc",
                "-lvorbisfile",
                "-lvorbis",
                "-logg",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build SudokuSolver.exe with SFML statically linked."
        }
    ]
}
